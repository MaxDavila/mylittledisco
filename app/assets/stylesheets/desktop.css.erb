body {
  overflow-x: hidden;
  background-image:url(<%= asset_path('320bground.jpg')%> );
  background-repeat:repeat-x;
  background-color: #23272c;
  width: 100%;
  height: 100%;
  margin: 0;
  font-family: 'Lato', sans-serif;
}
.container {
  float: left;
  background: #23272c;
  background-image:url(<%= asset_path('320bground.jpg')%> );
  background-repeat:repeat-x;
  width: 100%;
  height: 100%;
  text-align: center;
  position: absolute;
  color: white;
  -webkit-transition:all 0.8s ease-in-out;
  -moz-transition:all 0.8s ease-in-out;
  -o-transition:all 0.8s ease-in-out;
  transition:all 0.8s ease-in-out;
}
#nav-bar {
  margin: 0 auto;
  width: 100%;
  height: 5em;
  position: fixed;
  background-color: rgba(0,0,0,0.8);
  z-index: 1;
  top: 0px;
}


#nav-bar h1 {
  width: 100%;
  display: inline-block;
}

#stats {
  margin-top: 90px;
  display: inline-block;
}

#mobile-menu {
  display: none;
}


.slide {
  margin-left: 320px;
}

#search-bar {
  margin: 0 auto;
  height: 2em;
  width: 90%;
  margin-top: 3em;
  font-size: 1em;
  font-family: 'Lato', sans-serif;
  text-indent: 1em;
  border: none;
  background-color: rgb(241, 241, 241);
}



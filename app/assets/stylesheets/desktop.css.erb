.fixed{
  position: fixed;
}

#nav-bar.absolute {
  position: static;
}

#stats {
  font-size: 0.6em;
}


/*search results*/

#results {
  margin: 0 auto;
  margin-top: 5em;
  margin-bottom: 5em;
  float: left;
  padding-right: .5em;
  padding-bottom: 5em;
}

.song {
  display: inline-block;
  width: 20%;
  height: 170px;
  float: left;
  font-size: 0.85em;
  margin-bottom: 4em;
}

.song img {
  width: 135px;
}

.song-art {
  width: 135px;
  margin: 0 auto;
  position: relative;
}

.song-art-overlay {
  cursor: pointer;
  background: black;
  width: 135px;
  height: 135px;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  opacity: 0.0;
  -webkit-transition: all 0.2s ease-in-out;
  -moz-transition: all 0.2s ease-in-out;
  -o-transition: all 0.2s ease-in-out;
  transition: all 0.2s ease-in-out;
}

.song-art-overlay {
  cursor: pointer;
}

.song-art-overlay.disabled {
  opacity: 0.5;
  cursor: auto;
  pointer-events:none;
}


/*player */
#player {
  margin: 0 auto;
  width: 100%;
  height: 5em;
  position: fixed;
  background-color: rgba(0,0,0,0.8);
  bottom: 0px;
}

#player-controls {
  width: 100%;
  text-align: center;
}
#current-song-title {
  text-align: center;
  display: inline-block;
  margin-top: 1em;
  font-size: .9em;
  width: 60%;
  color: white;
}

.player-buttons {
  position: absolute;
  bottom: 1.5em;
  font-size: 1em;
  color: white;
  display: block;
  cursor: pointer;
  width: 10%;
}

#play {
  left: 20px;
}

#pause {
  left: 20px;
  display: none;
}

#next {
    position: fixed;

  right: 20px;
  width: 10%;
}



/*playlist */

#playlist {
  margin: 1em;
}


.playlist-container {
  position: absolute;
  overflow-y: scroll;
  margin-left: -20em;
  width: 20em;
  height: 33em;
  top: 6em;
  background-color: rgba(241, 241, 241, 0.98);
  z-index: 1;
  -webkit-transition: all 0.4s ease-in-out;
  -moz-transition: all 0.4s ease-in-out;
  -o-transition: all 0.4s ease-in-out;
  transition: all 0.4s ease-in-out;
}

.show-full {
  margin-left: 0;
}
.playlist-container h1 {
  width: 100%;
  display: inline-block;
  text-align: center;
  margin-bottom: 2em;
}


#playlist-toggle {
  display: inline-block;
  position: absolute;
  top: 30px;
  margin-left: 20px;
  cursor: pointer;
  line-height: 1.5em;
}

.fa-times-circle {
  cursor: pointer;
  color: gray;
}

.playlist-item {
  margin-top: 1em;
  border-bottom: 1px;
  border-bottom-style: solid;
  border-color: #ccc;
}

.playlist-image {
  margin-left: .5em;
}
.song-title {
  display: inline-block;
  width: 65%;
  margin-left: .5em;
  margin-top: 1em;
  font-size: .8em;
}

@media screen and (max-width: 850px) {
  .container {
    margin: 0 auto;
    width: 600px;
  }
  .song {
    width: 33%;
  }
}
@media screen and (max-width: 700px) {
  .container {
    width: 500px;
  }
  .song {
    width: 33%;
  }
  .song img {
    width: 100px;
  }
}



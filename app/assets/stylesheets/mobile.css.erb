@media screen and (max-width: 480px) {
  html {
    background-image:url(<%= asset_path('320bground.jpg')%> );
    background-repeat:repeat-x;
    background-color: #23272c;
  }

  body {
    overflow-x: hidden;
    background-image:url(<%= asset_path('320bground.jpg')%> );
    background-repeat:repeat-x;
    background-color: #23272c;
    width: 100%;
    height: 100%;
    margin: 0;
    font-family: 'Lato', sans-serif;
  }
  .container {
    float: left;
    background: #23272c;
    background-image:url(<%= asset_path('320bground.jpg')%> );
    background-repeat:repeat-x;
    width: 320px;
    min-height: 950px;
    text-align: center;
    position: absolute;
    color: white;
    -webkit-transition:all 0.5s ease-in-out;
    -moz-transition:all 0.5s ease-in-out;
    -o-transition:all 0.5s ease-in-out;
    transition:all 0.5s ease-in-out;
  }

  #playlist-toggle {
  display: none;
  }

  .slide {
    margin-left: 280px;
  }

  .fixed{
    position: fixed;
  }

  #mobile-menu {
    font-size: 1.8em;
    display: block;
    position: absolute;
    top: 11px;
    float: left;
    margin-left: 20px;
    cursor: pointer;
  }

  #nav-bar {
    margin: 0 auto;
    width: 100%;
    height: 3em;
    position: fixed;
    background-color: rgba(0,0,0,0.8);
    z-index: 1;
    top: 0px;
  }

  #nav-bar.absolute {
    position: absolute;
  }

  #nav-bar h1 {
    margin-top: 2px;
  }

  #stats {
    font-size: 0.6em;
    margin-top: 50px;
    display: inline-block;
  }

  #search-bar {
    top: 30px;
    font-family: 'Lato', sans-serif;
    font-size: 1em;
    width: 90%;
    height: 2em;
    position: relative;
    margin: 0 auto;
    text-indent: 1em;
    background-color: rgb(241, 241, 241);
    border: none;
  }

  #watermark {
    margin-top: 75px;
     -webkit-transition:all 0.3s ease-in-out;
    -moz-transition:all 0.3s ease-in-out;
    -o-transition:all 0.3s ease-in-out;
    transition:all 0.3s ease-in-out;
  }

  /*search results*/

  #results {
    margin-top: 7em;
    float: left;
    margin-bottom: 5em;
    padding-right: .5em;
  }

  .song {
    display: inline-block;
    width: 50%;
    height: 170px;
    float: left;
    font-size: 0.85em;
    margin-bottom: 4em;
  }

  .song img {
    width: 135px;
  }

  .song-art {
    width: 135px;
    margin: 0 auto;
    position: relative;
  }

  .song-art-overlay {
    cursor: pointer;
    background: black;
    width: 135px;
    height: 135px;
    position: absolute;
    top: 0px;
    left: 0px;
    right: 0px;
    opacity: 0.0;
    -webkit-transition: all 0.2s ease-in-out;
    -moz-transition: all 0.2s ease-in-out;
    -o-transition: all 0.2s ease-in-out;
    transition: all 0.2s ease-in-out;
  }

  .song-art-overlay {
    cursor: pointer;
  }

  .song-art-overlay.disabled {
    opacity: 0.5;
    cursor: auto;
    pointer-events:none;
  }
  /*player */
  #player {
    margin: 0 auto;
    width: 100%;
    height: 3em;
    position: fixed;
    background-color: rgba(0,0,0,0.8);
    bottom: 0px;
  }

  #player-controls {
    width: 100%;
    text-align: center;
  }
  #current-song-title {
    text-align: center;
    display: inline-block;
    margin-top: 0.5em;
    font-size: .9em;
    width: 60%;
    color: white;
    padding: 0px 10px 0px 10px;
  }

  .player-buttons {
    position: absolute;
    bottom: 0.7em;
    font-size: 1em;
    color: white;
    display: block;
    cursor: pointer;
    width: 10%;
  }

  #play {
    left: 20px;
  }

  #pause {
    left: 20px;
    display: none;
  }

  #next {
    position: absolute;
    right: 20px;
    width: 10%;
  }



  /*playlist */

  #playlist {
    margin: 1em;
  }

  .playlist-container {
    position: absolute;
    top: 0px;
    background-color: rgb(241, 241, 241);
    width: 320px;
    min-height: 100%;
    margin-left: 0;
    z-index: -1;
  }

  .playlist-container h1 {
    text-align: center;
  }


  .fa-times-circle {
    cursor: pointer;
    color: gray;
  }

  .playlist-item {
    margin-top: 1em;
    border-bottom: 1px;
    border-bottom-style: solid;
    border-color: #ccc;
  }
  .song-title {
    display: inline-block;
    width: 65%;
    margin-left: .5em;
    margin-top: 1em;
    font-size: .8em;
  }

  /*landing page*/

  .landing-page-container {
    background-color: #23272c;
    width: 320px;
    min-height: 600px;
    text-align: center;
    background-image:url(<%= asset_path('320bground.jpg')%> );
    background-repeat:repeat-x;
  }

  #logo {
    width: 100%;
    margin-top: 100px;
    float:right;
  }

  .landing-page-container input {
    text-indent: 1em;
    height: 45px;
    font-family: 'Lato', sans-serif;
    font-size: 1em;
    width: 245px;
    position: relative;
    margin: 0 auto;
    margin-top: 20px;
  }

  .landing-page-container input[type=text] {
    width: 245px;
  }

  .landing-page-container p {
    margin: 0px;
  }

  section {
    height: 0px;
    overflow: hidden;
    -webkit-transition: all 0.5s ease;
    -moz-transition: all 0.5s ease;
    -ms-transition: all 0.5s ease;
    -o-transition: all 0.5s ease;
    transition: all 0.5s ease;
  }

  .reveal {
    height: 70px;
  }

  .landing-page-container input.reveal {
    display: block;
  }

  #landing-page-buttons {
    display: inline-block;
    margin-top: 50px;
  }

  .landing-page-container .error {
    margin-top: 10px;
    color: white;
  }
}
